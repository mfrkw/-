
<% if member_signed_in? %>

  <h3>チャットルーム</h3>
  <div class="chat-field">
    <% @messages.each do |m| %>
      <!-- メッセージがmemberによるものだったら -->
      <% if m.is_member %>
        <!-- メッセージを右に寄せる -->
        <div class="right-message-member">
          <%= m.content %>
        </div>
      <!-- メッセージがfosterによるものだったら -->
      <% else %>
        <!-- メッセージを左に寄せる -->
        <div class="left-message">
          <%= m.content %>
        </div>
      <% end %>
    <% end %>
  </div>

<% elsif foster_signed_in?%>
  <h3>チャットルーム</h3>
  <div class="chat-field">
    <% @messages.each do |m| %>
      <!-- メッセージがmemberによるものだったら -->
      <% if m.is_member %>
        <!-- メッセージを左に寄せる -->
        <div class="left-message">
          <%= m.content %>
        </div>
      <!-- メッセージがfosterによるものだったら -->
      <% else %>
        <!-- メッセージを右に寄せる -->
        <div class="right-message-foster">
          <%= m.content %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= form_for [@room, @message] do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "メッセージを送る", class: "btn btn-secondary"%>
<% end %>