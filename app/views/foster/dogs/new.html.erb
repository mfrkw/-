<%= form_with model:@dog, url: foster_dogs_path, local:true do |f| %>
<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 ml-md-auto">
        <table>
          <tr>
            <td><%= f.label :"画像" %></td>
            <td>
              <div class="form-group">
                <%= f.attachment_field :image %>
              </div>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"犬の名前" %></td>
            <td>
              <div class="form-group">
                <%= f.text_field :name, placeholder: "太郎" %>
              </div>  
            </td>
          </tr>
          <tr>
            <td><%= f.label :"紹介文" %></td>
            <td>
              <div class="form-group">
                <%= f.text_area :introduction, placeholder: "散歩が大好きです" %>
              </div> 
            </td>
          </tr>
          <tr>
            <td><%= f.label :"犬種" %></td>
            <td>
              <div class="form-group">
                <%= f.text_field :dog_breed, placeholder: "ゴールデンレトリバー" %>
              </div> 
            </td>
          </tr>
          <tr>
            <td><%= f.label :"遊べる地域" %></td>
            <td>
              <div class="form-group">
                <%= f.text_field :area, placeholder: "東京都〇〇区" %>
              </div> 
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <div class="actions">
                <%= f.submit '登録', class: "btn btn-outline-info" %>
              </div> 
            </td>
          </tr>
        </table>
        
          
        
    </div>
  </div>
</div>

<% end %>