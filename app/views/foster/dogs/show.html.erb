<div class= "container">
  <div class="row mt-5">
    <div class="col-md-6 mt-10">
      <%= attachment_image_tag @dog, :image, :fill, 250, 250, format: 'jpeg' %>
    </div>
    <div class="col-md-6">
      <h4 class="content">名前</h4>
        <%= @dog.name %>
      <br/>
      <h4 class="content">紹介</h4>
         <%= @dog.introduction %>
      <h4 class="content">遊べる地域</h4>
        <%= @dog.area %>
        
    <div class="row mt-5">
      <% if foster_signed_in? && current_foster.id == @dog.foster_id %>
        <%= link_to '編集する', edit_foster_dog_path(@dog.id), class: "btn btn-outline-secondary" %>
        
        <%= link_to '削除する', foster_dog_path(@dog.id), method: :DELETE, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %>
      <% end %>
    </div>

    </div>
  </div>
</div>



