<div class="container">
  <div class="row mt-5">
    <div class="col-md-8 ml-md-auto">
      <%= form_with model:@dog, url: foster_dog_path, local:true do |f| %>
        <table>
          <tr>
            <td><%= f.label :"画像" %></td>
            <td>
              <div class="form-group col-6">
                <%= f.attachment_field :image %>
              </div>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"犬の名前" %></td>
            <td>
              <div class="form-group col-6">
                <%= f.text_field :name %>
              </div>  
            </td>
          </tr>
          <tr>
            <td><%= f.label :"紹介文" %></td>
            <td>
              <div class="form-group col-6">
                <%= f.text_area :introduction %>
              </div> 
            </td>
          </tr>
          <tr>
            <td><%= f.label :"犬種" %></td>
            <td>
              <div class="form-group col-6">
                <%= f.text_field :dog_breed %>
              </div> 
            </td>
          </tr>
          <tr>
            <td><%= f.label :"遊べる地域" %></td>
            <td>
              <div class="form-group col-6">
                <%= f.text_field :area %>
              </div> 
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <div class="actions col-6">
                <%= f.submit '変更を保存', class: "btn btn-outline-info" %>
              </div> 
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
