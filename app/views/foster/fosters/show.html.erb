<div class="container">
  <div class="row text-center">
    <div class="col">
      <% if foster_signed_in? && @foster.id == current_foster.id %>
      <h2 class="head-line text-center title_h2">マイページ</h2>
      
      <table class="table table-bordered table-condensed" >
        <tbody>
          <tr>
            <td class="info">名前</td>
            <td class="text-left"><%= @foster.last_name %><%= @foster.first_name %></td>
          </tr>
          <tr>
            <td class="info">メールアドレス</td>
            <td class="text-left"><%= @foster.email %></td>
          </tr>
          <tr>
            <td class="info">電話番号</td>
            <td class="text-left"><%= @foster.telephone_number %></td>
          </tr>
          <tr>
            <td class="info">郵便番号</td>
            <td class="text-left"><%= @foster.postal_code %></td>
          </tr>
          <tr>
            <td class="info">住所</td>
            <td class="text-left"><%= @foster.address %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to '編集する', edit_foster_foster_path, class: "btn btn-outline-secondary" %>
      <%= link_to "退会", out_foster_fosters_path, method: :PATCH, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
    
      <% end %>
    </div>
  </div>
</div>


