<div class="container">
  <div class="row">
    <div class="col text-center">
      <%= attachment_image_tag @dog, :image, :fill, 450, 550, format: 'jpeg' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 text-center mt-4">
      <strong><%= @dog.name %></strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 text-right">
    <p>紹介</p><br />
      <%= @dog.introduction %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p>遊べる地域</p>
      <%= @dog.area %>
    </div>
  </div>
  <div id="like_<%= @dog.id %>">
    <%= render "member/likes/like", dog: @dog %>
  </div>
</div>

<!--if create or show => @room nil?-->
<!--% if @isRoom == true %> -->

<% if member_signed_in? %>
  <% @fosters.each do |foster| %>
        <!----roomがあるかどうか分岐させる>-->
    <% if @foster_ids.include?(foster.id) %>　<!--.includeでfoster.idの検索をかけてる>-->
      <%= link_to "DMを送る", room_parh(current_member.rooms.find_by(foster_id: foster.id)), class: "fas fa-dog" %> <!--指定したカラムが特定の値を持つレコードを１つ探す。-->
    <% else %>
      <%= form_for Room.new do |f| %>
        <%= f.hidden_field :foster_id, :value => foster.id %> <!--value で渡したい値、つまりfoster.idを渡す-->
        <%= f.submit %>
      <% end %>
    <% end %>
  <% end %>



<% end %>


