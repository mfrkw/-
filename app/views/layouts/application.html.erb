<!DOCTYPE html>
<html>
  <head>
    <title>Matchingbow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if foster_signed_in? %>
      <li>
        <%= link_to "ログアウト", destroy_foster_session_path, method: :delete %>
      </li>
      <% else %>
      <li>
        <%= link_to "新規登録", new_foster_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_foster_session_path %>
      </li>
    <% end %>
    </header>
    <%= yield %>
  </body>
</html>
