<div class="container">
  <div class="row-10">
    <div class="col-md-2 text-center">
      <h5 style="background-color: #b0c4de;">新規会員登録</h5>
    </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "fosters/shared/error_messages", resource: resource %>


      <div class="field">
        <%= f.label :"名前　　　(姓)", class: "col-md-3 mt-3 control-label" %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "犬飼", class: "col-md-3" %>
        <%= f.label :"　　(名)", class: "col-md-1 control-label" %>
        <%= f.text_field :first_name, autofocus: true, placeholder: "好子", class: "col-md-3" %>
      </div>

      <div class="field">
        <%= f.label :"メールアドレス", class: "col-md-3 mt-3 control-label" %>
        <%= f.email_field :email, autofocus: true,  class: "col-md-3" %>
      </div>

      <div class="field">
        <%= f.label :"郵便番号　(ハイフンなし)", class: "col-md-3 mt-3 control-label" %>
        <%= f.text_field :postal_code, autofocus: true, class: "col-md-3" %>
      </div>

      <div class="field">
        <%= f.label :"住所", class: "col-md-3 mt-3 control-label" %>
        <%= f.text_field :address, autofocus: true, class: "col-md-7" %>
      </div>

      <div class="field">
        <%= f.label :"電話番号　(ハイフンなし)", class: "col-md-3 mt-3 control-label" %>
        <%= f.text_field :telephone_number, autofocus: true, class: "col-md-3" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(6文字以上)", class: "col-md-3 mt-3 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-md-3" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)", class: "col-md-3 mt-3 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-3" %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "新規登録", class: "btn btn-secondary col-md-3  offset-md-3" %>
      </div>
      <% end %>
  </div>
      <div class="row text-right mr-5">
       <p class="col-6 mt-4 "><%= link_to 'ログイン', new_foster_session_path %> はこちらから</p>
      </div>
</div>
